<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="PermissionAppCompatTheme" parent="@style/Base.Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CallFlashAppCompatTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="main_check_button_text">
        <item name="android:lines">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dp24</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="calllog_refresh_progressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/color_FF27BB56
        </item>
        <item name="android:toDegrees">10</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullScreenAdDialog" parent="@android:style/Theme.Dialog">
        <!-- 有无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/color_transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
