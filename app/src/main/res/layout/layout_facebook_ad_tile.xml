<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_ad_view_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp160"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/layout_fb_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.ads.MediaView
                android:id="@+id/native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|left"
                android:src="@drawable/ic_ad_banner_left" />
        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp50"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp6">

            <ImageView
                android:id="@+id/native_ad_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:contentDescription="@null"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/native_ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="true"
                android:fontFamily="@string/Roboto_Regular"
                android:maxLines="1"
                android:text="xxxxx"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="gone" />

            <TextView
                android:gravity="center"
                android:id="@+id/native_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="marquee"
                android:fontFamily="@string/Roboto_Regular"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_7F090D12"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <!-- Done Btn -->
            <Button
                android:id="@+id/native_ad_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:background="@drawable/btn_gray_7594b2_stroke_bg"
                android:fontFamily="@string/Roboto_Light"
                android:gravity="center"
                android:maxLines="1"
                android:minWidth="48dp"
                android:padding="4dp"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:text="Done" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>