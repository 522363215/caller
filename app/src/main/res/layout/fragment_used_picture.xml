<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:orientation="vertical"
           android:gravity="center"
           android:id="@+id/ll_set"
           android:layout_margin="@dimen/dp5">
           <ImageView
               android:layout_width="@dimen/dp72"
               android:layout_height="@dimen/dp64"
               android:src="@drawable/icon_no_records" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/no_set"
               android:layout_marginTop="@dimen/dp10"
               android:layout_marginBottom="@dimen/dp10"
               android:textColor="@color/white" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/set"
               android:id="@+id/tv_set"
               android:textColor="@color/white"
               android:background="@drawable/shape_green_bg_round2"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingLeft="30dp"
               android:paddingRight="30dp"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:orientation="vertical"
           android:id="@+id/ll_get"
           android:visibility="gone"
           android:layout_margin="@dimen/dp5">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/get"
               android:layout_marginBottom="10dp"
               android:textColor="@color/white" />
           <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.GlideView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/iv_get" />
       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_margin="@dimen/dp5"
           android:id="@+id/rl_cookie">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/mine_set_before"
               android:layout_marginBottom="10dp"
               android:textColor="@color/white" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/mine_all"
               android:id="@+id/tv_all_cookie"
               android:textColor="@color/white"
               android:layout_toLeftOf="@+id/iv_all_cookie"
               android:layout_marginRight="@dimen/dp5"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/iv_all_cookie"
               android:layout_alignParentRight="true"
               android:background="@drawable/icon_right_arrow" />
           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/rv_all_cookie"
               android:layout_marginTop="@dimen/dp10"
               android:layout_below="@+id/iv_all_cookie"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_margin="@dimen/dp5"
           android:id="@+id/rl_downloaded">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/mine_downloaded"
               android:layout_marginBottom="10dp"
               android:textColor="@color/white" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/mine_all"
               android:id="@+id/tv_all"
               android:textColor="@color/white"
               android:layout_toLeftOf="@+id/iv_all"
               android:layout_marginRight="@dimen/dp5"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/iv_all"
               android:layout_alignParentRight="true"
               android:background="@drawable/icon_right_arrow" />
           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/rv_all"
               android:layout_marginTop="@dimen/dp10"
               android:layout_below="@+id/iv_all"/>
       </RelativeLayout>
   </LinearLayout>
</android.support.v4.widget.NestedScrollView>