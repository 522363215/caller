<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_ad_view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_adview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RoundImageView
                    android:id="@+id/nativeAdIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="38dp"
                    android:contentDescription="@null"
                    android:visibility="visible"
                    android:src="@drawable/default_news_cover" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nativeAdTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@string/Roboto_Regular"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="xxxxx"
                        android:textColor="@color/color_E04E586A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/nativeAdBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@string/Roboto_Regular"
                        android:gravity="left|start"
                        android:maxLines="3"
                        android:textColor="#FF1D1B51"
                        android:textSize="14sp"
                        tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp32">

                <ImageView
                    android:id="@+id/nativeAdImage"
                    android:layout_width="match_parent"
                    android:layout_height="175dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|left"
                    android:src="@drawable/ic_ad_banner" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <!-- Done Btn -->
                <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RippleFrameLayout
                    android:id="@+id/layout_btn_ripple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    wave:mrl_rippleAlpha="0.2"
                    wave:mrl_rippleColor="#585858"
                    wave:mrl_rippleDelayClick="false"
                    wave:mrl_rippleHover="true"
                    wave:mrl_rippleOverlay="true">

                    <Button
                        android:id="@+id/nativeAdCallToAction"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_margin="@dimen/dp4"
                        android:background="@drawable/btn_green_ff00c858_selector_round4dp"
                        android:fontFamily="@string/Roboto_Light"
                        android:gravity="center"
                        android:text="DOWNLOAD"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RippleFrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>