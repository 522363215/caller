<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ad_view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp8"
            android:paddingTop="@dimen/dp8">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/nativeAdIcon"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_marginRight="@dimen/dp8"
                android:contentDescription="@null"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_adview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp72"
                android:layout_marginRight="@dimen/dp72"
                android:background="@drawable/bg__ffe8ecee_selector_round8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/layout_fb_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp80"
                        android:layout_above="@+id/layout_btn_ripple">

                        <com.facebook.ads.MediaView
                            android:id="@+id/nativeAdMedia"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp80" />


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="top|left"
                            android:src="@drawable/ic_ad_banner" />
                        <!--<ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/ic_splash_header" />-->
                    </FrameLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nativeAdTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp8"
                            android:layout_marginLeft="@dimen/dp8"
                            android:layout_marginRight="@dimen/dp8"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginTop="@dimen/dp8"
                            android:ellipsize="end"
                            android:fontFamily="@string/Roboto_Regular"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="xxxxx"
                            android:textColor="@color/color_FF00284D"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/nativeAdBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp8"
                            android:layout_marginEnd="@dimen/dp8"
                            android:layout_marginLeft="@dimen/dp8"
                            android:layout_marginRight="@dimen/dp8"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginTop="@dimen/dp4"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:fontFamily="@string/Roboto_Regular"
                            android:gravity="left"
                            android:maxLines="3"
                            android:textColor="@color/color_FF00284D"
                            android:textSize="12sp"
                            tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/nativeAdCallToAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|end"
                    android:gravity="center">

                    <!-- Done Btn -->
                    <!--<blocker.call.wallpaper.screen.caller.ringtones.callercolor.viewSelected.RippleFrameLayout
                        android:id="@+id/layout_btn_ripple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#00000000"
                        wave:mrl_rippleAlpha="0.2"
                        wave:mrl_rippleColor="#585858"
                        wave:mrl_rippleDelayClick="false"
                        wave:mrl_rippleHover="true"
                        wave:mrl_rippleOverlay="true">

                    </blocker.call.wallpaper.screen.caller.ringtones.callercolor.viewSelected.RippleFrameLayout>-->

                    <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.ShimmerFrameLayout
                        android:id="@+id/layoutShimmerMediaView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        shimmer:base_alpha="1"
                        shimmer:duration="2000">

                        <TextView
                            android:id="@+id/tvNativeAdCallToAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="@dimen/dp4"
                            android:layout_marginRight="@dimen/dp4"
                            android:fontFamily="@string/Roboto_Light"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/color_FF12BF42"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:text="Done" />
                    </blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.ShimmerFrameLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </FrameLayout>
</LinearLayout>