<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/fb_ad_white_title">

    <RelativeLayout
        android:id="@+id/layout_set"
        android:layout_width="@dimen/dp72"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_permission_des"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/layout_permission_des"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginStart="@dimen/dp8"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_get"
            android:layout_width="@dimen/dp24"
            android:layout_height="@dimen/dp24"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_shadow_stroke_round30_white"
            android:gravity="center"
            android:text="@string/permission_set"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_permission_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/layout_set"
        android:layout_toStartOf="@id/layout_set"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp8"
        android:paddingTop="@dimen/dp8">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="dadadadadada" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp6"
            android:alpha="0.5"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="dadadadadadadaaaaaaaaaaaaaaaaaaaaaaaaaaa" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout_set"
        android:layout_alignLeft="@+id/layout_set"
        android:layout_alignRight="@+id/layout_set"
        android:layout_alignStart="@+id/layout_set"
        android:layout_below="@+id/layout_set">

        <TextView
            android:layout_width="2dp"
            android:layout_height="@dimen/dp30"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp4"
            android:layout_marginTop="@dimen/dp4"
            android:background="@color/white" />
    </RelativeLayout>

</RelativeLayout>