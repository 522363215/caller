<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_block_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/color_transparent"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_no_records" />

        <View
            android:layout_width="0dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="2"
            android:text="@string/block_list_empty"
            android:textColor="@color/color_FF464654"
            android:textSize="16sp"
            tools:text="121245454d54545445454545545454" />

    </LinearLayout>


</RelativeLayout>