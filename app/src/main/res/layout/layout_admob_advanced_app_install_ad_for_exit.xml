<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeAppInstallAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/color_FF2E3239"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="312dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="291dp"
                android:layout_height="165dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_admob_background"
                android:rotation="7"/>

            <ImageView
                android:layout_width="312dp"
                android:layout_height="176dp"
                android:layout_centerInParent="true"
                android:src="@color/white"/>

            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="300dp"
                android:layout_height="164dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_ad_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ad_flag"
            android:layout_gravity="right"
            android:visibility="gone"
            tools:visibility="visible"/>

        <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RoundImageView
            android:id="@+id/iv_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:cornerRadius="4dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/Roboto_Regular"
            android:gravity="center"
            android:layout_marginTop="17dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@string/Roboto_Regular"
            android:gravity="center"
            android:maxLines="3"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="@color/color_8FFFFFFF"
            android:textSize="14dp"
            tools:text="Contentssssssssssssssssssssssssssssssssssssssssssssssss" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="24dp">
            <!-- Done Btn -->
            <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RippleFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                wave:mrl_rippleAlpha="0.2"
                wave:mrl_rippleColor="#585858"
                wave:mrl_rippleDelayClick="false"
                wave:mrl_rippleHover="true"
                wave:mrl_rippleOverlay="true">

                <Button
                    android:id="@+id/btn_callToAction"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_yellow_fff8e71c_selector_round4dp"
                    android:fontFamily="@string/Roboto_Light"
                    android:gravity="center"
                    android:textColor="@color/color_FF191B1E"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="Install now" />
            </blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RippleFrameLayout>

        </RelativeLayout>

    </LinearLayout>
</com.google.android.gms.ads.formats.NativeAppInstallAdView>