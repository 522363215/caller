<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/dp44"
        android:layout_height="@dimen/dp44">

        <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.AvatarView
            android:id="@+id/av_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:fontSize="20" />

        <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.FontIconView
            android:id="@+id/fiv_avatar_add_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_call_flash_show_custom"
            android:gravity="center"
            android:text="@string/icon_add"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginStart="@dimen/dp16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:fontFamily="@string/Roboto_Medium"
            android:gravity="center"
            android:minHeight="@dimen/dp21"
            android:singleLine="true"
            android:text="@string/example_number"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_call_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp11"
                android:layout_marginRight="@dimen/dp11"
                android:fontFamily="@string/Roboto_Light"
                android:gravity="center"
                android:minHeight="@dimen/dp16"
                android:singleLine="true"
                android:text="Frank"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_call_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:alpha="0.8"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>