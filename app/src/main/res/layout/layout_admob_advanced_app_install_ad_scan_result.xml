<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeAppInstallAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp8"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:paddingStart="@dimen/dp8">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/img_up_left_layout"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_gravity="left|bottom">

                <ImageView
                    android:id="@+id/img_up_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    android:src="@drawable/img_up_left"
                    tools:alpha="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_up_right_layout"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_gravity="right|bottom">

                <FrameLayout
                    android:id="@+id/img_up_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    tools:alpha="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_up_right" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="48dp"
                android:layout_marginStart="48dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/title_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:orientation="vertical"
                    tools:alpha="1">

                    <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RoundImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_launcher"
                        app:cornerRadius="6dp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="xxxxxxxxx"
                        android:textColor="@color/white_80"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_admob_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:visibility="visible"
            tools:alpha="1">

            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:src="@drawable/ic_ad_banner" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/img_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/img_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:src="@drawable/img_bottom"
                tools:alpha="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/describe_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:text="xxxxx"
                android:textColor="@color/white_80"
                android:textSize="12sp"
                tools:alpha="1" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:alpha="0"
            tools:alpha="1">

            <LinearLayout
                android:minWidth="@dimen/dp84"
                android:paddingLeft="@dimen/dp4"
                android:paddingRight="@dimen/dp4"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_green_ff00c858_selector_round4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_callToAction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@null"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>


            <ImageView
                android:id="@+id/img_button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:alpha="0"
                android:src="@drawable/img_result_button1"
                tools:alpha="1" />

            <ImageView
                android:id="@+id/img_button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:alpha="0"
                android:src="@drawable/img_result_button2"
                tools:alpha="1" />
        </FrameLayout>

        <!-- Done Btn -->

    </LinearLayout>
</com.google.android.gms.ads.formats.NativeAppInstallAdView>