<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_ad_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp8"
    android:paddingStart="@dimen/dp8"
    android:paddingEnd="@dimen/dp8"
    android:paddingRight="@dimen/dp8">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/img_up_left_layout"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_gravity="left|bottom">

            <ImageView
                android:id="@+id/img_up_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:src="@drawable/img_up_left"
                tools:alpha="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_up_right_layout"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_gravity="right|bottom">

            <FrameLayout
                android:id="@+id/img_up_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                tools:alpha="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_up_right" />

                <FrameLayout
                    android:id="@+id/layout_ad_choise_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nativeAdBody" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="48dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:orientation="vertical"
                tools:alpha="1">

                <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.RoundImageView
                    android:id="@+id/nativeAdIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/default_news_cover"
                    app:cornerRadius="6dp" />

                <TextView
                    android:id="@+id/nativeAdTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="xxxxxxxxx"
                    android:textColor="@color/white_80"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_fb_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:visibility="visible"
        tools:alpha="1">

        <ImageView
            android:id="@+id/nativeAdImage"
            android:layout_width="match_parent"
            android:layout_height="175dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:src="@drawable/ic_ad_banner_left" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/img_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/img_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:src="@drawable/img_bottom"
            tools:alpha="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/describe_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nativeAdBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:text="xxxxx"
            android:textColor="@color/white_80"
            android:textSize="12sp"
            tools:alpha="1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:alpha="0"
        tools:alpha="1">

        <TextView
            android:layout_gravity="bottom"
            android:id="@+id/nativeAdCallToAction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_green_ff00c858_selector_round4dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:minWidth="@dimen/dp84"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/img_button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            tools:alpha="1"
            android:src="@drawable/img_result_button1" />

        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/img_button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            tools:alpha="1"
            android:src="@drawable/img_result_button2"/>
    </FrameLayout>
</LinearLayout>