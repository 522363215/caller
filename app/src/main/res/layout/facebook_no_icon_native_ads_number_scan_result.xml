<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ad_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp8"
    android:paddingLeft="@dimen/dp8"
    android:paddingRight="@dimen/dp8"
    android:paddingStart="@dimen/dp8">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/img_up_left_layout"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp56"
            android:layout_gravity="left|bottom">

            <ImageView
                android:id="@+id/img_up_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_up_left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_up_right_layout"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp56"
            android:layout_gravity="right|bottom">

            <FrameLayout
                android:id="@+id/img_up_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_up_right" />

                <FrameLayout
                    android:id="@+id/layout_ad_choise_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nativeAdBody" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp48"
            android:layout_marginStart="@dimen/dp48"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/nativeAdIcon"
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp8"
                    android:src="@drawable/ic_launcher"
                    app:cornerRadius="@dimen/dp6" />

                <TextView
                    android:id="@+id/nativeAdTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="xxxxxxxxx"
                    android:textColor="@color/white_80"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.FontIconView
            android:visibility="visible"
            android:id="@+id/fiv_ad_close"
            android:layout_width="@dimen/dp24"
            android:layout_height="@dimen/dp24"
            android:layout_gravity="right|end"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:layout_marginTop="@dimen/dp4"
            android:alpha="0.3"
            android:background="@drawable/shape_circle_half_transparent"
            android:gravity="center"
            android:text="@string/icon_close"
            android:textColor="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_fb_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <com.facebook.ads.MediaView
            android:id="@+id/nativeAdMedia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:src="@drawable/ic_ad_banner" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/img_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp36"
        android:layout_margin="@dimen/dp8">

        <ImageView
            android:id="@+id/img_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/describe_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nativeAdBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:text="xxxxx"
            android:textColor="@color/white_80"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80">

        <TextView
            android:id="@+id/nativeAdCallToAction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:background="@drawable/btn_green_ff00c858_selector_round4dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:minWidth="@dimen/dp84"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:src="@drawable/img_result_button1" />

        <ImageView
            android:id="@+id/img_button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:src="@drawable/img_result_button2" />
    </FrameLayout>
</LinearLayout>