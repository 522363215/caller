<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_ad_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ad_banner_left"
            android:visibility="gone" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp48"
            android:layout_gravity="bottom"
            android:background="@color/color_AF191B1E"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="xxxxx"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:fontFamily="@string/Roboto_Regular"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="xxxxx"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
            <!-- Done Btn -->
            <Button
                android:background="@drawable/btn_green_ff00c858_selector_round4dp"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:id="@+id/btn_callToAction"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp32"
                android:padding="@dimen/dp4"
                android:fontFamily="@string/Roboto_Regular"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.gms.ads.formats.NativeContentAdView>