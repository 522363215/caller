<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_shadow_floating_bg"
    card_view:cardBackgroundColor="@color/transparent"
    card_view:cardCornerRadius="2dp">

    <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.callflash.FullScreenVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_gradient"
        android:visibility="gone" />

    <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.callflash.CallFlashCustomAnimView
        android:id="@+id/custom_anim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.GlideView
        android:id="@+id/glide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</android.support.v7.widget.CardView>
