<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FF3B86CA"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp32"
        android:paddingEnd="@dimen/dp8"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:paddingStart="@dimen/dp8"
        android:paddingTop="@dimen/dp32">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_call_name_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/Roboto_Regular"
                android:gravity="center"
                android:singleLine="true"
                android:text="Frank"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_call_number_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/Roboto_Medium"
                android:gravity="center"
                android:singleLine="true"
                android:text="123-4567-8901"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.CircleImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:src="@drawable/icon_woman"
            app:border_color="@color/color_4E92CF"
            app:border_width="5dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FF191B1E">

        <ImageView
            android:id="@+id/ring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp8"
            android:src="@drawable/ring" />

        <ImageButton
            android:id="@+id/callActionButton"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_call_answer" />

    </RelativeLayout>

</LinearLayout>