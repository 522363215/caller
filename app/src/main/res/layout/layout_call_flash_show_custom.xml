<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_call_flash_show_custom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp136"
        android:layout_height="@dimen/dp136"
        android:background="@drawable/bg_guide_next_button">

        <blocker.call.wallpaper.screen.caller.ringtones.callercolor.view.FontIconView
            android:id="@+id/fiv_add_custom_1"
            android:layout_width="@dimen/dp116"
            android:layout_height="@dimen/dp116"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_call_flash_show_custom"
            android:gravity="center"
            android:text="@string/icon_add"
            android:textColor="@color/white"
            android:textSize="36sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/dp8"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/call_flash_show_add_custom_bg"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="@string/call_flash_show_custom_bg_desc"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>