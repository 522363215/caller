<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_notification_settings"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp96"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="1dp">

    <RelativeLayout
        android:id="@+id/adUnit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp96"
        android:background="@color/black">

        <ImageView
            android:id="@+id/nativeAdImage"
            android:layout_width="@dimen/dp120"
            android:layout_height="88dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp96"
            android:layout_toEndOf="@id/nativeAdImage"
            android:layout_toRightOf="@+id/nativeAdImage"
            android:orientation="vertical"
            android:paddingEnd="4dp"
            android:paddingRight="@dimen/dp4"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ad_flag"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp16"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="AD"
                    android:textColor="@color/whitesmoke"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/nativeAdTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/nativeAdBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/nativeAdCallToAction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp32"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:background="@drawable/shape_shadow_round4_ffff5800"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>